<book>:

    problemtext:problemtext
    book_page:book_page
    problems:problems
    date:date
    time:time
    
    canvas.before:
        Rectangle:
            source:'home.jpeg'
            pos:self.pos
            size: self.size
            
    MDToolbar:
        title:"Booking"
        pos_hint:{"top": 1}
        left_action_items:[["arrow-left", lambda x: root.goback()]]
            
    
    ScreenManager:
        id: book_page

        Screen:
            name:"problem"

            MDLabel:
                id: problemtext
                size_hint_y: None
                height: 50
                text: "Select a problem below"
                halign:"center"
                pos_hint:{'center_y': 0.8}

                
            MDCard:
                size_hint:0.8, 0.5
                pos_hint:{'center_x':0.5, 'center_y':0.5}

                        
                        
                ScrollView:
                    MDList:
                        id: problems
                        
                        RightCheckbox:
                        
                        
            MDLabel:
                text:"ok"

            MDIconButton:
                icon:'arrow-right'
                md_bg_color: app.theme_cls.primary_color
                pos_hint:{'center_x':0.5,'center_y':0.1}
                on_release: root.book_page.current = "hospital"


        Screen:
            name: "hospital"

            MDLabel:
                id: problemtext
                size_hint_y: None
                height: 50
                text: "Select a hospital"
                halign:"center"
                pos_hint:{'center_y': 0.8}

            MDCard:
                size_hint:0.8, 0.5
                pos_hint:{'center_x':0.5, 'center_y':0.5}

                ScrollView:
                    MDList:
                        OneLineListItem:
                            text:"Kubwa Genral Hospital"
                            
                        OneLineListItem:
                            text:"Kubwa Genral Hospital"

                        OneLineListItem:
                            text:"Kubwa Genral Hospital"

                        OneLineListItem:
                            text:"Kubwa Genral Hospital"

                        OneLineListItem:
                            text:"Kubwa Genral Hospital"

                        OneLineListItem:
                            text:"Kubwa Genral Hospital"

                        OneLineListItem:
                            text:"Kubwa Genral Hospital"

                        OneLineListItem:
                            text:"Kubwa Genral Hospital"
        
            MDIconButton:
                icon:'arrow-left'
                md_bg_color: app.theme_cls.primary_color
                pos_hint:{'center_x':0.4,'center_y':0.1}
                on_release: root.book_page.current = "problem"

            MDIconButton:
                icon:'arrow-right'
                md_bg_color: app.theme_cls.primary_color
                pos_hint:{'center_x':0.6,'center_y':0.1}
                on_release: root.book_page.current = "timedat"

        Screen:
            name: "timedat"

            MDLabel:
                text:"Select a date and time"
                halign:"center"
                pos_hint:{'center_y':0.8}

            MDLabel:
                id: date
                text:""
                halign:"center"
                pos_hint:{'center_y':0.7}

            MDRaisedButton:
                text: "Select a date"
                pos_hint:{'center_x':0.5,'center_y':0.6}
                on_release: root.show_time_pick()

            MDLabel:
                id: time
                text:""
                halign:"center"
                pos_hint:{'center_y':0.5}

            MDRaisedButton:
                text: "Select a time"
                pos_hint:{'center_x':0.5,'center_y':0.4}
                on_release: root.show_time_pick()
                
                
            MDIconButton:
                icon:'arrow-left'
                md_bg_color: app.theme_cls.primary_color
                pos_hint:{'center_x':0.4,'center_y':0.1}
                on_release: root.book_page.current = "hospital"

            MDIconButton:
                icon:'arrow-right'
                md_bg_color: app.theme_cls.primary_color
                pos_hint:{'center_x':0.6,'center_y':0.1}
                on_release: root.book_page.current = "confirmation"
        
        Screen:
            name: "confirmation"

            MDCard:
                size_hint:0.8, 0.5
                pos_hint:{'center_x':0.5, 'center_y':0.5}
                on_touch_down: root.show_time_pick() 

            MDIconButton:
                icon:'arrow-left'
                md_bg_color: app.theme_cls.primary_color
                pos_hint:{'center_x':0.4,'center_y':0.1}
                on_release: root.book_page.current = "timedat"

            
            MDIconButton:
                icon:'arrow-right'
                md_bg_color: app.theme_cls.primary_color
                pos_hint:{'center_x':0.6,'center_y':0.1}
                on_release:
                    root.book_page.current = "problem"
                    root.retur()
                



