<login>:

    logph:logph
    logpword:logpword
    
    canvas.before:
        Rectangle:
            source:"bgg.jpeg"
            size: self.size
            pos : self.pos
    BoxLayout:
        orientation:"vertical"
        size_hint: 0.8, 0.6
        
        spacing: '10px'
        padding: "5px"
        pos_hint:{'center_x':0.5, 'center_y':0.5}
        opacity: 0.85

        canvas.before:
            Color:
                rgba:216/255, 230/255, 240/255, 1

            Rectangle:
                size: self.size
                pos : self.pos
        
        MDLabel:
            text:"Lasanjo Health Management System"
            halign:"center"
            font_size: '15px'

        MDLabel:
            text:"Sign In"
            halign:"center"
            
        MDTextFieldRound:
            id: logph
            hint_text:"Enter your Phone Number"
            size_hint_x: 0.8
            pos_hint:{'center_x':0.5}

        MDTextFieldRound:
            id: logpword
            hint_text:"Enter your Password"
            size_hint_x: 0.8
            pos_hint:{'center_x':0.5}

        MDIconButton:
            icon:'arrow-right'
            md_bg_color: app.theme_cls.primary_color
            on_release: root.sigin()
            pos_hint:{'center_x':0.5}

        MDFillRoundFlatButton:
            text:"Sign Up"
            on_release: root.sigu()
            pos_hint:{'center_x':0.5}
            size_hint_x: 0.8
            

        MDFillRoundFlatButton:
            text:"Forgot Password"
            on_release: root.fpword()
            pos_hint:{'center_x':0.5}
            size_hint_x: 0.8
            

<dashboard>:
    screen_man:screen_man
    
    Screen:
    
        BoxLayout:
            orientation:"vertical"

            MDToolbar:
                id: toolbar
                title: ""
                pos_hint:{"top": 1}
                left_action_items:[["menu", lambda x: nav_drawer.set_state("open")]]

            NavigationLayout:
                x: toolbar.height

                ScreenManager:
                    id: screen_man

                    Screen:
                        name: "main"
                        canvas.before:
                            Rectangle:
                                source: 'home.jpeg'
                                size: self.size
                                pos: self.pos

                        MDCard:
                            size_hint:0.95 , 0.95
                            pos_hint: {'center_x':0.5 , 'center_y':0.5}

                            ScrollView:
                                MDList:
                                    ThreeLineAvatarListItem:
                                        text:"Kubwa General Hospital"
                                        secondary_text:"8:00AM - 8:30AM"
                                        tertiary_text:"Dr Lasisi Muideen"
                                        ImageLeftWidget:
                                            source:"jenny.jpg"

                                    ThreeLineAvatarListItem:
                                        text:"Gwarinpa General Hospital"
                                        secondary_text:"10:00AM - 10:30AM"
                                        tertiary_text:"Dr Lasisi Jenrolaoluwa"
                                        ImageLeftWidget:
                                            source:"daddy.jpg"

                                

                        MDFloatingActionButton:
                            icon: 'plus'
                            md_bg_color: app.theme_cls.primary_color
                            pos_hint:{'center_x':0.85 , 'center_y':0.1}
                            on_release: root.chgbook()
                            
                    Screen:
                        name: "changepword"
                        canvas.before:
                            Rectangle:
                                source:'home.jpeg'
                                pos:self.pos
                                size: self.size

                        BoxLayout:
                            orientation:'vertical'
                            pos_hint:{'center_x':0.5, 'center_y':0.5}
                            spacing:"15px"
                            size_hint: 0.7, 0.5
                                
                            MDLabel:
                                text:"Change Password"
                                halign:"center"

                            MDTextFieldRound:
                                hint_text: "Enter your Current Password"
                                
                            MDTextFieldRound:
                                hint_text: "Enter your New Password"

                            MDTextFieldRound:
                                hint_text: "Re-Enter your New Password"

                            MDFillRoundFlatButton:
                                text: "Change"
                                pos_hint:{'center_x':0.5}

                    Screen:
                        name:"card"

                        ScrollView:
                            MDList:
                                OneLineListItem:
                                    text:"Kubwa General Hospital"

                                OneLineListItem:
                                    text:"Gwarimpa General Hospital"
                            
                            
                        

                            

                                

                MDNavigationDrawer:
                    id: nav_drawer

                    BoxLayout:
                        orientation: "vertical"
                        padding: "5px"

                        Image:
                            source:"bgg.jpeg"

                        ScrollView:
                            MDList:
                                OneLineIconListItem:
                                    canvas.before:
                                        Color:
                                            rgba:
                                                216/255, 230/255, 240/255, 1
                                        Rectangle:
                                            size: self.size
                                            pos: self.pos
                                            
                                    text:"Main"
                                    on_press:
                                        nav_drawer.set_state('close')
                                        root.screen_man.current = "main"
                                    IconLeftWidget:
                                        icon: 'account-circle'

                                OneLineIconListItem:
                                    canvas.before:
                                        Color:
                                            rgba:
                                                216/255, 230/255, 240/255, 1
                                        Rectangle:
                                            size: self.size
                                            pos: self.pos
                                        
                                    text:"Hospital Card"
                                    on_press:
                                        nav_drawer.set_state('close')
                                        root.screen_man.current = "card"
                                    IconLeftWidget:
                                        icon: 'card'

                                OneLineIconListItem:
                                    canvas.before:
                                        Color:
                                            rgba:
                                                216/255, 230/255, 240/255, 1
                                        Rectangle:
                                            size: self.size
                                            pos: self.pos
                                            
                                    text:"Logout"
                                    on_press:
                                        nav_drawer.set_state('close')
                                        root.logot()
                                    IconLeftWidget:
                                        icon: 'logout'
                                        
                                OneLineIconListItem:
                                    canvas.before:
                                        Color:
                                            rgba:
                                                216/255, 230/255, 240/255, 1
                                        Rectangle:
                                            size: self.size
                                            pos: self.pos
                                            
                                    text:"Change Password"
                                    on_press:
                                        nav_drawer.set_state('close')
                                        root.screen_man.current = "changepword"
                                    IconLeftWidget:
                                        icon: 'sync'

